   <!-- Trim settings -->
   <path>/controls/flight/aileron-trim</path>
   <path>/controls/flight/elevator-trim</path>
   <path>/controls/flight/rudder-trim</path>
   
   <!-- Parking brake -->
   <path>/controls/gear/brake-parking</path>
   
