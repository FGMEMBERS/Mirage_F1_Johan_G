<?xml version="1.0"?>
<PropertyList>
  <path>Airbrake light.ac</path>
  <object-name>AB</object-name>

  <!-- Airbrake extended light -->
  <animation>
    <object-name>AB-extended</object-name>
    <type>select</type>
    <condition>
      <greater-than>
        <property>/surface-positions/speedbrake-pos-norm</property>
        <value>0.2</value>
      </greater-than>
    </condition>
  </animation>

  <!-- External panel lighting (red flood lights) -->
  <animation>
  <object-name>AB</object-name>
    <type>material</type>
    <emission>
      <factor-prop>/controls/lighting/panel-external-norm</factor-prop>
      <red>0.7</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>

</PropertyList>