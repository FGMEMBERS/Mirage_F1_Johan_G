<?xml version="1.0"?>
<PropertyList>
  <path>airbrake-light.ac</path>
  <object-name>Enclosure</object-name>
  <object-name>Glass</object-name>

  <!-- Full slats light -->
  <animation>
    <object-name>Glass</object-name>
    <type>select</type>
    <condition>
      <greater-than>
        <property>/surface-positions/speedbrake-pos-norm</property>
        <value>0.2</value>
      </greater-than>
    </condition>
  </animation>

  <!-- External panel lighting (red flood lights) -->
  <animation>
  <object-name>Enclosure</object-name>
    <type>material</type>
    <emission>
      <factor-prop>/controls/lighting/panel-external-norm</factor-prop>
      <red>0.7</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>

  <!-- Range animation hiding instrument if further away than 5 meters -->
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>5</max-m>
  </animation>
</PropertyList>