<?xml version="1.0"?>
<PropertyList>
  <path>master-caution-and-limits-lights.ac</path>
  <object-name>MC and limit lights</object-name>

  <!-- Limits light -->
  <animation>
    <object-name>Limits</object-name>
    <type>select</type>
    <condition>
        <equals>
          <property>/controls/switches/indicator-lights-test</property>
          <value>true</value>
        </equals>
    </condition>
  </animation>

  <!-- Master caution light -->
  <animation>
    <object-name>Master caution</object-name>
    <type>select</type>
    <condition>
        <equals>
          <property>/controls/switches/indicator-lights-test</property>
          <value>true</value>
        </equals>
    </condition>
  </animation>

  <!-- Range animation hiding instrument if further away than 5 meters -->
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>5</max-m>
  </animation>
</PropertyList>