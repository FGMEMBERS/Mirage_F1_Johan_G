<tank x="-0.5" y="2.096" z="0.44" jet="true" capacity="650"/>
<tank x="-0.632" y="0.0" z="0.029" jet="true" capacity="1650"/-->
<ballast x="9" y="0.0" z="0.1" mass="1400"/>
<weight x="4" y="0" z="0.8" mass-prop="/yasim/weights/pilot-lb"/>
